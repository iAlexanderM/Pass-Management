@model PassManagement.Models.PersonDto

<h2>Детали анкеты</h2>

<div>
    <h4>@Model.LastName @Model.FirstName</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Фото
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.PhotoPath)" alt="Фото" width="150" />
        </dd>
        <dt class="col-sm-2">
            Дата рождения
        </dt>
        <dd class="col-sm-10">
            @Model.Birthdate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Телефон
        </dt>
        <dd class="col-sm-10">
            @Model.NumberPhone
        </dd>
        <dt class="col-sm-2">
            Документ
        </dt>
        <dd class="col-sm-10">
            @Model.DocumentType: @Model.NumberDocument
        </dd>
        <dt class="col-sm-2">
            Дата выдачи
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfIssue.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Кем выдан документ
        </dt>
        <dd class="col-sm-10">
            @Model.WhoIssuedDocument
        </dd>
        <dt class="col-sm-2">
            Адрес
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
        <dt class="col-sm-2">
            Продукт
        </dt>
        <dd class="col-sm-10">
            @Model.Product
        </dd>
    </dl>
</div>
<a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
