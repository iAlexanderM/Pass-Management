@model PassManagement.Models.PersonDto

<h2>Создать новую анкету</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Patronymic"></label>
        <input asp-for="Patronymic" class="form-control" />
        <span asp-validation-for="Patronymic" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Birthdate"></label>
        <input asp-for="Birthdate" type="date" class="form-control" />
        <span asp-validation-for="Birthdate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumberPhone"></label>
        <input asp-for="NumberPhone" class="form-control" />
        <span asp-validation-for="NumberPhone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DocumentType"></label>
        <input asp-for="DocumentType" class="form-control" />
        <span asp-validation-for="DocumentType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumberDocument"></label>
        <input asp-for="NumberDocument" class="form-control" />
        <span asp-validation-for="NumberDocument" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOfIssue"></label>
        <input asp-for="DateOfIssue" type="date" class="form-control" />
        <span asp-validation-for="DateOfIssue" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WhoIssuedDocument"></label>
        <input asp-for="WhoIssuedDocument" class="form-control" />
        <span asp-validation-for="WhoIssuedDocument" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product"></label>
        <input asp-for="Product" class="form-control" />
        <span asp-validation-for="Product" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Photo"></label>
        <div class="d-flex align-items-center">
            <input asp-for="Photo" type="file" class="form-control-file" />
            <img src="~/assets/icons/iconplus.png" alt="Upload Icon" class="ml-2" style="cursor:pointer;" onclick="document.querySelector('input[type=file]').click();" />
            <img src="~/assets/icons/iconcam.png" alt="Camera Icon" class="ml-2" style="cursor:pointer;" onclick="openCameraModal();" />
        </div>
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Создать</button>
</form>

<!-- Модальное окно для работы с веб-камерой -->
<div class="modal" id="cameraModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Сфотографировать</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <video id="cameraStream" autoplay style="width: 100%;"></video>
                <canvas id="cameraCanvas" style="display:none;"></canvas>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" onclick="capturePhoto()">Сфотографировать</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/camera.js"></script>
    @await Html.RenderPartialAsync("_ValidationScriptsPartial")
}